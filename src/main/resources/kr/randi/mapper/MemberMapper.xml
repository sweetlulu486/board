<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.randi.mapper.MemberMapper">
	
	<resultMap type="kr.randi.domain.MemberVO" id="memberMap">
		<id property="userid" column="userid"/>
		<result property="userid" column="userid"></result>
		<result property="userpw" column="userpw"></result>
		<result property="userName" column="username"></result>
		<result property="regDate" column="regDate"></result>
		<result property="updateDate" column="updateDate"></result>
		<collection property="authList" resultMap="authMap" />	
	</resultMap>
	
	<resultMap type="kr.randi.domain.AuthVO" id="authMap">
		<result property="userid" column="userid" />
		<result property="auth" column="auth"/>	
	</resultMap>
	
	<select id="read" resultMap="memberMap">
		SELECT
			mem.userid, userpw, username, enable, regdate, updatedate, auth
		FROM
			tbl_member mem LEFT OUTER JOIN tbl_member_auth auth on mem.userid=auth.userid
		WHERE mem.userid = #{userid}
	</select>
</mapper>